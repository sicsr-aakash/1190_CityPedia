<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >


<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Browsing1_listview" >

    <Spinner
        android:id="@+id/spinner_subcatagory"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="760dp"
        android:layout_below="@+id/spinner_subcatagory"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="0dp" >

        <ListView
            android:id="@+id/browsingListview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp" >
        </ListView>

        <TextView
            android:id="@+id/textNoContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout1"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/text_size"
            android:gravity="center"
            android:text=""
            android:textColor="#fff" />
    </LinearLayout>

   
</RelativeLayout>

<RelativeLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ftHangout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/hang" />
            
             <ImageView
                android:id="@+id/ftFoodZone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/foo" />
             
              <ImageView
                android:id="@+id/ftShopping"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/shop" />
              
               <ImageView
                android:id="@+id/ftEvent"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/eve" />
               
                <ImageView
                android:id="@+id/ftOrg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/or" />
                
                 <ImageView
                android:id="@+id/ftOther"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/oth" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
    